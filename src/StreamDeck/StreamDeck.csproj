<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Company>Zube, inc.</Company>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/markzuber/streamdeckdotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/markzuber/streamdeckdotnet</RepositoryUrl>
    <Copyright>(c) Mark Zuber</Copyright>
    <Description>Elgato StreamDeck controller for .NET</Description>
    <PackageTags>dotnet elgato streamdeck</PackageTags>
    <SignAssembly>true</SignAssembly>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile>StreamDeck.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
